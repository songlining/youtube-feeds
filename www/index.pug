doctype html
html
  head
    title Youtube Feeds
    // Bootstrap 5 CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin='anonymous')
    // Bootstrap Icons (replaces glyphicons)
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
    link(rel='stylesheet', href='/css/custom.css')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    div.container
      div.card.mt-3
        div.card-header Add your playlist
        div.card-body
          div.input-group
            input#url.form-control(type='text', placeholder='https://www.youtube.com/playlist?list=PLK4elntcUEy3e0gvdfvzASS3x1O1nJVFT')
            button#add_url.btn.btn-primary(type='button')
              i.bi.bi-list-ul
        div.card-body Click the buttons below to copy podcast URL to clipboard and then paste into your favorite podcast player
      div.container.mt-3
        table#playlists.table.table-borderless

    // Bootstrap 5 Bundle JS (includes Popper)
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz', crossorigin='anonymous')
    script(src='/js/jquery.min.js')
    script(src='/js/clipboard.min.js')
    script(src='/js/custom.js')
